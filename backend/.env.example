# Environment variables declared in this file are automatically made available to Prisma.
# See the documentation for more detail: https://pris.ly/d/prisma-schema#accessing-environment-variables-from-the-schema

# Prisma supports the native connection string format for PostgreSQL, MySQL, SQLite, SQL Server, MongoDB and CockroachDB.
# See the documentation for all the connection string options: https://pris.ly/d/connection-strings

DATABASE_URL="postgresql://postgres:your-db-password@localhost:5432/<your-db>?schema=public"

# AUTH0 DETAILS
AUTH0_DOMAIN="your-auth0-domain"
AUTH0_AUDIENCE="your-auth0-audience"

# Stripe API Keys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Plan IDs (from your Stripe Dashboard)
STRIPE_FREE_PLAN_ID=price_...
STRIPE_PREMIUM_PLAN_ID=price_...
STRIPE_BUSINESS_PLAN_ID=price_...

# Frontend URL for redirection after payment
FRONTEND_URL="http://localhost:5173"


PORT=3000

OWNER_ID="userId project owner"

# EMAILS SERVER DETAILS
EMAIL_HOST=
EMAIL_PORT=
EMAIL_SECURE='true'
EMAIL_USER=
EMAIL_PASS=
